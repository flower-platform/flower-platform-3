<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.flowerplatform.eclipse.part.FlowerDiagramEditor"
            default="false"
            extensions="notation"
            id="org.flowerplatform.eclipse.editor.FlowerDiagramEditor"
            name="%editor.name">
      </editor>
   </extension>
    <extension
         point="org.eclipse.equinox.http.registry.httpcontexts">
      <httpcontext
            id="flower-platform">
         <resource-mapping
               bundle="org.flowerplatform.flex_host_app"
               path="/WebContent">
         </resource-mapping>
         <resource-mapping
               bundle="org.flowerplatform.flex_host_app"
               path="/bin">
         </resource-mapping>
         <resource-mapping
               bundle="org.flowerplatform.eclipse"
               path="/WebContent">
         </resource-mapping>
      </httpcontext>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/"
            base-name="/"
            httpcontextId="flower-platform">
      </resource>
      <serviceSelector
            filter="(other.info=org.flowerplatform.eclipse)">
      </serviceSelector>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/*.jsp"
            class="org.eclipse.equinox.jsp.jasper.registry.JSPFactory:/WebContent/"
            httpcontextId="flower-platform">
      </servlet>
      <servlet
            alias="/messagebroker"
            class="flex.messaging.MessageBrokerServlet"
            httpcontextId="flower-platform">
      </servlet>
      <servlet
            alias="/servlet/public-resources"
            class="org.flowerplatform.communication.public_resources.PublicResourcesServlet"
            httpcontextId="flower-platform"
            load-on-startup="false">
      </servlet>
      <serviceSelector
            filter="(other.info=org.flowerplatform.eclipse)">
      </serviceSelector>
   </extension>
   <extension
         point="org.flowerplatform.common.flowerProperties">
      <flowerPropertiesProvider
            flowerPropertiesProviderClass="org.flowerplatform.eclipse.EclipseFlowerPropertiesProvider">
      </flowerPropertiesProvider>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?endof=group.new">
         <command
               commandId="NewDiagramCommand"
               label="%command.label"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.flowerplatform.eclipse.action.CreateNewDiagramHandler"
            id="NewDiagramCommand"
            name="%command.name">
      </command>
   </extension>

</plugin>
