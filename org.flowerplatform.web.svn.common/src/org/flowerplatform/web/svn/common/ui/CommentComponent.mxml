<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300"
		 creationComplete="init()">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.collections.ArrayList;
			
			import org.flowerplatform.communication.CommunicationPlugin;
			import org.flowerplatform.communication.service.InvokeServiceMethodServerCommand;
			import org.flowerplatform.communication.tree.remote.TreeNode;
			import org.flowerplatform.flexutil.FlexUtilGlobals;
			import org.flowerplatform.web.common.WebCommonPlugin;
			import org.flowerplatform.web.svn.common.SvnCommonPlugin;
		
			
			protected function myDD_changeHandler(event:Event):void{
				if (previousComments.selectedIndex == 0) {
					commitMessage.text = "";
				}
				else 
					commitMessage.text = String(previousComments.selectedItem);
			}
			
			private function init():void {
				// get previous comments used, including comments templates
				CommunicationPlugin.getInstance().bridge.sendObject(
					new InvokeServiceMethodServerCommand("svnService", "getPreviousComments", null, this, setPreviousComments));	
			}
			
			private function setPreviousComments(array:ArrayCollection):void {
				array.addItemAt("<Choose a previously entered comment>", 0);
				previousComments.dataProvider = array;
			}
			
			public function get comment():String {				
				return (commitMessage == null) ? "" : commitMessage.text;
			}
			
		]]>
	</fx:Script>
	
	<s:VGroup width="100%" 
			  height="100%">
		<s:HGroup width="100%" 
				  verticalAlign="middle">
			<s:Label width="100%" 
					 text="Enter commit message:"/>							
		</s:HGroup>					
		<s:TextArea id = "commitMessage" width="100%"/>					
		<s:HGroup width="100%" 
				  verticalAlign="middle" />
		<s:DropDownList id = "previousComments" 
						prompt = "Choose a previously entered comment" 
						width="100%"
						labelField="commitMessage" 
						change="myDD_changeHandler(event)"/>
	</s:VGroup>
	
</s:Group>
