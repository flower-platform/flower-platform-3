<popup:Wizard 
	xmlns:fx="http://www.adobe.com/2006/mxml"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:popup="org.flowerplatform.flexutil.popup.*"
	xmlns:component="org.flowerplatform.web.git.common.ui.component.*"
	xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Script>
		<![CDATA[
			import mx.collections.IList;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.validators.Validator;
			import org.flowerplatform.common.CommonPlugin;
			import org.flowerplatform.communication.CommunicationPlugin;
			import org.flowerplatform.communication.service.InvokeServiceMethodServerCommand;
			import org.flowerplatform.communication.tree.remote.TreeNode;
			import org.flowerplatform.flexutil.FlexUtilGlobals;
			import org.flowerplatform.flexutil.dialog.IDialogResultHandler;
			import org.flowerplatform.flexutil.popup.ActionBase;
			import org.flowerplatform.flexutil.popup.IAction;
			import org.flowerplatform.flexutil.popup.IPopupHost;			
			import org.flowerplatform.web.svn.common.SvnCommonPlugin;
			import org.flowerplatform.web.common.WebCommonPlugin;
						
			public var node:TreeNode;
			
			[Bindable]
			public var svnLocation:String;			
			
			[Bindable]
			private var check:Boolean;
				
			private function getProjectsCallbackHandler(result:Boolean):void {
				_popupHost.hideSpinner();
				if (result != true) {
					check = result;
				} else {
					FlexUtilGlobals.getInstance().popupHandlerFactory.removePopup(this);
				}
			}
			
			public function cancelHandler():void {
				FlexUtilGlobals.getInstance().popupHandlerFactory.removePopup(this);				
			}
			
			protected override function finishClickHandler():void {				
				if (Validator.validateAll(validators).length > 0) {
					return;
				}				
				CommunicationPlugin.getInstance().bridge.sendObject(
					new InvokeServiceMethodServerCommand("svnService", "createSvnRepository", [mySvnLocation.text, node.getPathForNode(true)], this,getProjectsCallbackHandler ));
				popupHost.showSpinner(SvnCommonPlugin.getInstance().getMessage("svn.action.createSvnRepository.view.spinner"));				
			}
			
			public override function set popupHost(value:IPopupHost):void {
				_popupHost = value;				
				_popupHost.setLabel(SvnCommonPlugin.getInstance().getMessage("svn.action.createSvnRepiository.view.label"));
				_popupHost.setIcon(SvnCommonPlugin.getInstance().getResourceUrl("images/repository_rep.gif"));
			}
			
			protected override function creationCompleteHandler():void {
				super.creationCompleteHandler();
				wizardImage.source = WebCommonPlugin.getInstance().getResourceUrl("images/newfolder_wizban.gif");
			}						
			
			
		]]>
	</fx:Script>
	
	<fx:Array id="validators">
		<mx:StringValidator minLength="1" property="text" source="{mySvnLocation}"/>
	</fx:Array>	
	
	<popup:states>
		<mx:State name="0">			
			<mx:SetProperty name="wizardTitle" value="{SvnCommonPlugin.getInstance().getMessage('svn.ui.createSvnRepository.WizardTitle')}"/>			
			<mx:AddChild relativeTo="{contentArea}">									
				<s:VGroup width="100%" height="100%">
					<s:HGroup width="100%" verticalAlign="middle">
						<s:Label width="100%" text="{SvnCommonPlugin.getInstance().getMessage('svn.ui.createSvnRepository.SvnUrlLabel')}"/>													
					</s:HGroup>						
					<s:TextInput id="mySvnLocation" width="100%" text="{svnLocation}"/> 				
					<s:HGroup width="100%" verticalAlign="middle">					
					</s:HGroup>												
				</s:VGroup>		 
			</mx:AddChild>
		</mx:State>					
	</popup:states>	
</popup:Wizard>
