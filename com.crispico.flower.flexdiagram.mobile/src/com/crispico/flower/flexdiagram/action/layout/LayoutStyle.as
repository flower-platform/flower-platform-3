package com.crispico.flower.flexdiagram.action.layout {
	
	/**
	 * Define constants for Layout Actions. These can be align styles,
	 * resize styles, distribute styles etc. 
	 */ 
	public class LayoutStyle {
		
		////////////////////////////////////////////
		// Define accepted values for align Style //
		////////////////////////////////////////////
		public static const ALIGN_LEFT:String = "left";
		
		public static const ALIGN_CENTER:String = "center";
		
		public static const ALIGN_RIGHT:String = "right";
		 
		public static const ALIGN_TOP:String = "top";
		
		public static const ALIGN_MIDDLE:String = "middle";
		
		public static const ALIGN_BOTTOM:String = "bottom";
		
		////////////////////////////////////////////
		// Define accepted values for resize style//
		////////////////////////////////////////////
		public static const RESIZE_WIDTH:String = "width";
		
		public static const RESIZE_HEIGHT:String = "height";
		
		public static const RESIZE_BOTH:String = "both";
		
		/////////////////////////////////////////////////
		// Define accepted values for distribute style //
		/////////////////////////////////////////////////
		public static const DISTRIBUTE_HORIZONTAL:String = "horizontal";
		
		public static const DISTRIBUTE_VERTICAL:String = "vertical";
		
		public static const DISTRIBUTE_AUTO:String = "auto";
	}
}