<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
         point="org.eclipse.equinox.http.registry.httpcontexts">
      <httpcontext
            id="flower-platform">
         <resource-mapping
               bundle="org.flowerplatform.flex_host_app"
               path="/WebContent">
         </resource-mapping>
         <resource-mapping
               bundle="org.flowerplatform.flex_host_app"
               path="/bin">
         </resource-mapping>
         <resource-mapping
               bundle="org.flowerplatform.idea"
               path="/WebContent">
         </resource-mapping>
      </httpcontext>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/"
            base-name="/"
            httpcontextId="flower-platform">
      </resource>
      <serviceSelector
            filter="(other.info=org.flowerplatform.idea)">
      </serviceSelector>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/*.jsp"
            class="org.eclipse.equinox.jsp.jasper.registry.JSPFactory:/WebContent/"
            httpcontextId="flower-platform">
      </servlet>
      <servlet
            alias="/messagebroker"
            class="flex.messaging.MessageBrokerServlet"
            httpcontextId="flower-platform">
      </servlet>
      <servlet
            alias="/servlet/public-resources"
            class="org.flowerplatform.communication.public_resources.PublicResourcesServlet"
            httpcontextId="flower-platform"
            load-on-startup="false">
      </servlet>
      <servlet
            alias="/servlet/image-composer"
            class="org.flowerplatform.communication.public_resources.ImageComposerServlet"
            httpcontextId="flower-platform"
            load-on-startup="false">
      </servlet>
      <serviceSelector
            filter="(other.info=org.flowerplatform.idea)">
      </serviceSelector>
   </extension>
   <extension
         id="dummyAplication"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.flowerplatform.idea.DummyApplication">
         </run>
      </application>
   </extension>

</plugin>
