<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.flowerplatform.editor.contentType">
      <contentType
            contentType="text">
      </contentType>
   </extension>
   <extension
         point="org.flowerplatform.editor.contentTypeToEditorMapping">
      <contentTypeToEditorMapping
            compatibleEditor="text"
            editorStatefulService="org.flowerplatform.editor.text.remote.TextEditorStatefulService"
            isDefaultEditor="true"
            priority="300"
            serviceId="textEditorStatefulService">
      </contentTypeToEditorMapping>
   </extension>
   <extension
         point="org.flowerplatform.editor.contentTypeToEditorMapping">
      <contentTypeToEditorMapping
            compatibleEditor="codeMirrorEditor"
            editorStatefulService="org.flowerplatform.editor.text.remote.TextEditorStatefulService"
            isDefaultEditor="true"
            priority="200"
            serviceId="codeMirrorEditorStatefulService">
      </contentTypeToEditorMapping>
   </extension>
   <extension
         point="org.flowerplatform.editor.fileExtensionToContentTypeMapping">
      <fileExtensionToContentTypeMapping
            contentType="text"
            fileExtension="*">
      </fileExtensionToContentTypeMapping>
   </extension>

</plugin>
