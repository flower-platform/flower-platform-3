<?xml version="1.0" encoding="utf-8"?>
<mx:HDividedBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:tree="com.crispico.flower.mp.tree.*" xmlns:base="com.crispico.flower.mp.codesync.base.*">

	<mx:Script>
		<![CDATA[
			[Bindable]
			public var projectPath:String;
		]]>
	</mx:Script>
	
	<mx:VDividedBox width="50%" height="100%">
		<base:DiffTree id="diffTree" treeType="{DiffTree.TREE_TYPE_DIFF}" projectPath="{projectPath}" width="100%" height="50%"/>
		<mx:Label text="{diffTree.selectedItem.toolTip}" height="50" width="100%"/>
		<base:DiffTree id="leftTree" treeType="{DiffTree.TREE_TYPE_LEFT}" projectPath="{projectPath}" width="100%" height="50%"/>
	</mx:VDividedBox>
	<mx:VDividedBox width="50%" height="100%">
		<base:DiffTree id="ancestorTree" treeType="{DiffTree.TREE_TYPE_ANCESTOR}" projectPath="{projectPath}" width="100%" height="50%"/>
		<base:DiffTree id="rightTree" treeType="{DiffTree.TREE_TYPE_RIGHT}" projectPath="{projectPath}" width="100%" height="50%"/>
	</mx:VDividedBox>

</mx:HDividedBox>
