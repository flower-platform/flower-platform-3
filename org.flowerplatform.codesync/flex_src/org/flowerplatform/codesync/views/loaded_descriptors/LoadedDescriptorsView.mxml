<!--

Displays all the loaded codeSyncElementDescriptors in a list

@author Mircea Negreanu

-->
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300"
		 implements="org.flowerplatform.flexutil.view_content_host.IViewContent">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.IList;
			
			import org.flowerplatform.codesync.CodeSyncPlugin;
			import org.flowerplatform.editor.EditorPlugin;
			import org.flowerplatform.flexutil.FlexUtilGlobals;
			import org.flowerplatform.flexutil.action.IAction;
			import org.flowerplatform.flexutil.view_content_host.IViewHost;


			private var _viewHost:IViewHost;
			
			public function set viewHost(value:IViewHost):void {
				_viewHost = value;				
				_viewHost.setLabel("Properties");
				_viewHost.setIcon(EditorPlugin.getInstance().getMessage('open.resources.current'));
			}
			
			public function getActions(selection:IList):Vector.<IAction> {
				return null;
			}

		]]>
	</fx:Script>
	<s:List id="list"
		width="100%" height="100%"
		dataProvider="{CodeSyncPlugin.getInstance().getCodeSyncElementDescriptors()}"
		/>
	
</s:Group>
